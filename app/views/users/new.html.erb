<h1>Register</h1>

<%= form_with url: '/users', method: :post, local: true do |f| %>
<%= f.label :name, "Name" %>
<%= f.text_area :name %>
<%= f.label :email, "Email" %>
<%= f.text_area :email %>
<%= f.label :password, "Password" %>
<%= f.text_area :password %>
<%= f.label :password_confirmation, "Confirm password" %>
<%= f.text_area :password_confirmation %>
<%= f.button 'Register' %>
<% end  %>